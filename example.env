# Example environment variables. Rename to .env and fill in your own values.

# Telegram Configuration

TELEGRAM_BOT_TOKEN=
# Set to true for development/testing, false for production
TELEGRAM_CLEANUP_WEBHOOK_ON_SHUTDOWN=false

# Webhook Configuration

SERVER_WEBHOOK_URL=
# REQUIRED: Generate with: openssl rand -hex 32
SERVER_WEBHOOK_SECRET_TOKEN=
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Database Configuration

# SQLite: sqlite+aiosqlite:///./exchange_bot.db
# PostgreSQL: postgresql+asyncpg://user:pass@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./exchange_bot.db
DATABASE_ECHO=false

# Logging Configuration

LOG_LEVEL=INFO