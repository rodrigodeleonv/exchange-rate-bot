# Example environment variables. Rename to .env and fill in your own values.

PRODUCTION=True

# Telegram Configuration

TELEGRAM_BOT_TOKEN=
# Set to true for development/testing, false for production
TELEGRAM_CLEANUP_WEBHOOK_ON_SHUTDOWN=false
TELEGRAM_REQUEST_TIMEOUT=30

# Webhook Configuration

SERVER_WEBHOOK_BASE_URL=
# REQUIRED: Generate with: openssl rand -hex 32
SERVER_WEBHOOK_SECRET_TOKEN=
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
# Timezone for the scheduler: use IANA names (e.g. America/New_York)
# or fixed offsets (e.g. Etc/GMT+1 = UTCâˆ’1, note the inverted sign).
SERVER_TIMEZONE=UTC

# Database Configuration

# SQLite: sqlite+aiosqlite:///./exchange_bot.db
# PostgreSQL: postgresql+asyncpg://user:pass@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./exchange_bot.db
DATABASE_ECHO=false

# Logging Configuration

LOG_LEVEL=INFO