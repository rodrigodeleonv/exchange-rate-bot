# Example environment variables. Rename to .env and fill in your own values.

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook Configuration
WEBHOOK_URL=https://yourdomain.com
# REQUIRED: Generate with: openssl rand -hex 32
WEBHOOK_SECRET_TOKEN=your_secret_token_here
# Set to true for development/testing, false for production
CLEANUP_WEBHOOK_ON_SHUTDOWN=false

# Web Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# SQLite: sqlite+aiosqlite:///./exchange_bot.db
# PostgreSQL: postgresql+asyncpg://user:pass@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./exchange_bot.db
DATABASE_ECHO=false

# Logging Configuration
LOG_LEVEL=INFO