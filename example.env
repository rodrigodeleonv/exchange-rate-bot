# Example environment variables. Rename to .env and fill in your own values.

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook Configuration (for production deployment)
WEBHOOK_URL=https://yourdomain.com
# REQUIRED: Generate with: openssl rand -hex 32
WEBHOOK_SECRET_TOKEN=your_secret_token_here
HOST=0.0.0.0
PORT=8000
# Set to true for development/testing, false for production
CLEANUP_WEBHOOK_ON_SHUTDOWN=false

# Logging Configuration
LOG_LEVEL=INFO